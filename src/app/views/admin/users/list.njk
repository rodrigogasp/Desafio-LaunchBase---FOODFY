{%extends "admin/layoutadmin.njk"%}

{%block title%}
    <title>Foodfy - Usuários</title>
{%endblock title%}

{%block content%}

    <div class="title">
        <h2>Usuários</h2>
        <div>
            <a href="/admin/users/create">
                <button class='buttonNew'>Novo</button>
            </a>
        </div>
    </div>

    <div class="usersList">

        {%for user in users%}

        <div class="userListed">

            <h3>{{user.name}}</h3>
            <p>{{user.email}}</p>
            <div class="userOptions">
                <a href="#">Editar</a>
                <form action="/admin/users" id="removeUser">
                    <button id='buttonremoveUser' type="submit">Remover</button>
                </form>
            </div>

        </div>

        {%endfor%}

    </div>

</div>

{%endblock content%}