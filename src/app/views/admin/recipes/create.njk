{%extends "admin/layoutadmin.njk"%}

{%block title%}
<title>Nova Receita</title>
{%endblock title%}



{%block content%}

<form action="/admin/recipes" method="post" class="card">


    <div class="create">

        <h2>Criando Receita</h2>
        <button type="submit">Salvar Receita</button>


    </div>

    <div class="item">

        <p>Nome</p>
        <input type="text" name="title">


    </div>

    <div class="item">

        <p>Autor</p>
        <input type="number" name="chef_id">


    </div>

    <div class="item">

        <p>Imagem da Receita</p>
        <input type="url" name="image">


    </div>

    <div id="addIngredient">

        <p>Ingredientes</p>

        <div class="ingredient">
            <input type="text" name="ingredients[]">
        </div>

    </div>

    <div class="buttonadd">

        <button type="button" class="addIngredient">Adicionar novo ingrediente</button>

    </div>

    <div id="addPreparation">


        <p>Modo de preparo</p>

        <div class="preparation">

            <input type="text" name="preparation[]">

        </div>
    </div>

    <div class="buttonadd">

        <button type="button" class="addPreparation">Adicionar novo passo</button>

    </div>

    <div class="item">

        <p>Informações adicionais</p>
        <textarea name="information" cols="30" rows="10"></textarea>

    </div>


</form>



{%endblock content%}


{%block scripts%}
<script src="/scripts/admin-features.js"></script>


 {%endblock scripts%}









