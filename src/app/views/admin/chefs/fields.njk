 <div class="item">

            <p>Nome</p>
            <input type="text" name="name" value="{{chef.name}}">

        </div>

        <div class="item">

            <p>Avatar</p>
            <div class="chefFile">

                <button type="button" id="sendChefFile">Enviar Avatar</button>
                <input id="chefFile" type="file" name="photos" multiple="multiple" accept="image/*" onchange="PhotosUploadChef.handleFileInput(event)">
            </div>

            <div id="photos-preview">
                {% if files %}
                    {% for image in files %}
                        <div class="photo" id="{{image.id}}">
                            <img class="chefFormImg" src="{{image.src}}" alt="{{image.name}}">

                            <i class="material-icons chefFormIcon" onclick="PhotosUploadChef.removeOldPhoto(event)">close</i>
                        </div>
                    {% endfor %}
                    <input type="hidden" name="removed_files">
                {% endif %}
            </div>
        </div>
    </div>

</div>