{%extends 'admin/session/layoutsession.njk'%}

{%block content%}

<form action="/admin/password-reset" method="POST" id='resetPasswordForm'>

<div class="passwordreset">
<p>Email</p>
<input type="text" name='email' placeholder="Digite seu email" value="{{user.email}}">

</div>

<div class="passwordreset">
<p>Nova Senha</p>
<input type='password' name='password' placeholder="Digite sua nova senha">

</div>

<div class="passwordreset">

<p>Repetir Senha</p>
<input type='password' name='passwordRepeat' placeholder="Repita a sua nova senha">
    
</div>

<input type="hidden" name="token" value="{{token}}">


</form>


<div id='buttonResetPassword'>

<button type='submit' form='resetPasswordForm'>Salvar</button>

</div>



{%endblock content%}