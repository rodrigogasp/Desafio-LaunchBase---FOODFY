{%extends 'admin/session/layoutsession.njk'%}

{%block title%}
    <title>Foodfy - Esqueceu a senha?</title>
{%endblock title%}

{%block content%}

    <form method="POST" action="/admin/forgot-password" id="recoveryForm">

        <h2>Esqueceu a senha?</h2>


        <div>
        <p>Email</p>
        <input name="email" type="text" placeholder="Digite seu email" value="{{user.email}}">

        </div>
        
        <div>
        <button type="submit" form="recoveryForm">Recuperar</button>

        </div>


    </form>

{%endblock content%}