{%extends "general/layout.njk"%}

    {%block title%}
    <title>Receitas</title>
    {%endblock title%}

    {%block menu%}
     <form id="filter-recipes" action="/general" method="GET">
        
            <input  type="text" 
                    name="filter"
                   placeholder="Buscar uma receita"
                   value="{{filter}}"
            >

            <button form="filter-recipes" type="submit">Filtrar</button>
        
        </form>
    {%endblock menu%}


    {%block content%}
    <div class="container">
        
        <div class="cards" id="cardsRecipes">

            {%for item in item%}
            <div class="card" id="{{item.id}}">

                <a href="/recipe/{{item.id}}">
                <img src="{{item.image}}" alt="imagem de {{item.title}}">

                </a>
                <h4>{{item.title}}</h4>
                <p>por {{item.chefs_name}}</p>


            </div>

            {%endfor%}




        </div>

    </div>

    {%endblock content%}

   
        
{%block scripts%}
<script src="/scripts/scripts.js"></script>
{%endblock scripts%}
    