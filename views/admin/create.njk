{%extends "admin/layoutadmin.njk"%}

{%block title%}
<title>Nova Receita</title>
{%endblock title%}



{%block content%}

<form action="/admin" method="post" class="card">


<div class="create">

<h2>Criando Receita</h2>
<button type="submit">Salvar Receita</button>


</div>

<div class="item">

    <p>Imagem da Receita</p>
    <input type="url" name="image_url">


</div>

<div class="item">

    <p>Ingredientes</p>
    <input type="text" name="ingredients[]">
    <button class="add">Adicionar novo ingrediente</button>


</div>

<div class="item">

    <p>Modo de preparo</p>
    <input type="text" name="preparation[]">
    <button class="add">Adicionar novo passo</button>


</div>

<div class="item">

    <p>Informações adicionais</p>
    <textarea name="informations" cols="30" rows="10"></textarea>

</div>




{%endblock content%}











</form>

